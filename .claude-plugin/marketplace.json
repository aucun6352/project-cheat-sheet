{
  "name": "project-cheat-sheet",
  "owner": {
    "name": "gglee",
    "email": "aucun6352@gmail.com"
  },
  "metadata": {
    "description": "Repository for project cheat sheets.",
    "version": "0.2.0"
  },
  "plugins": [
    {
      "name": "creator-suite",
      "source": "./plugins/creator-suite",
      "description": "Automatically creates tools that help Claude perform automation better.",
      "version": "0.1.0",
      "author": {
        "name": "gglee"
      }
    },
    {
      "name": "java-design-patterns",
      "source": "./plugins/java-design-patterns",
      "description": "Java design patterns implemented as skill plugins.",
      "version": "0.1.0",
      "homepage": "https://github.com/iluwatar/java-design-patterns-vuepress-web",
      "license": "MIT"
    },
    {
      "name": "design-architecture",
      "source": "./plugins/design-architecture",
      "description": "Design architecture plugin.",
      "version": "0.1.0",
      "author": {
        "name": "dazuiba"
      }
    },
    {
      "name": "CCNotify",
      "author": {
        "name": "Enterprise Team",
        "email": "enterprise@company.com"
      },
      "source": {
        "source": "github",
        "repo": "dazuiba/CCNotify"
      },
      "repository": "https://github.com/dazuiba/CCNotify",
      "license": "MIT",
      "hooks": {
        "UserPromptSubmit": [
          {
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/ccnotify.py UserPromptSubmit"
              }
            ]
          }
        ],
        "Stop": [
          {
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/ccnotify.py Stop"
              }
            ]
          }
        ],
        "Notification": [
          {
            "hooks": [
              {
                "type": "command",
                "command": "${CLAUDE_PLUGIN_ROOT}/ccnotify/ccnotify.py Notification"
              }
            ]
          }
        ]
      },
      "description": "CCNotify provides desktop notifications for Claude Code, alerting you when Claude needs your input or completes tasks."
    }
  ]
}